CÓDIGO UM

using System;
class Program{
    static void Main(){
        Console.WriteLine("Olá!");
        int a=10;
        Console.WriteLine("A = {0}", a);
        int b=20;
        Console.WriteLine("B = {0}", b);
        int c=(a+b)/2;
        Console.WriteLine("C = {0}", c);
        c=c-40;
        int[] numeros = new int[6];
        numeros[3] = a + b + c; 
        Console.WriteLine("Valores do vetor:");
        for (int i = 0; i < numeros.Length; i++)
        {
            Console.WriteLine("numeros[{0}] = {1}", i, numeros[i]);
        }
        Console.WriteLine("C = {0}", c);
    }
}


CÓDIGO DOIS
using System;

class Program
{
    static void Main(string[] args)
    {
        int a = 2;
        Console.WriteLine("Valor de A = {0}", a);
        int[] v = new int[6]; 
        while (a < 6)
        {
            v[a] = 10 * a; 
            a += 1; 
        }

   
        Console.WriteLine("Valores do vetor:");
        for (int i = 0; i < v.Length; i++)
        {
            Console.WriteLine("v[{0}] = {1}", i, v[i]);
        }
    }
}


CÓDIGO TRÊS

